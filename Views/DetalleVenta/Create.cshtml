@model SWebEnergia.Models.DetalleVentum

@{
    ViewData["Title"] = "Agregar Detalle";
}

<h4>Agregar detalle para la venta @Model.IdVenta</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="IdVenta" />

    <div class="form-group">
        <label asp-for="IdProducto"></label>
        <select asp-for="IdProducto" class="form-control" asp-items="@(ViewData["IdProducto"] as SelectList)" id="IdProducto">
            <option value="">-- Seleccione producto --</option>
        </select>
        <span asp-validation-for="IdProducto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cantidad"></label>
        <input asp-for="Cantidad" class="form-control" type="number" min="1" id="Cantidad" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PrecioUnitario"></label>
        <input asp-for="PrecioUnitario" class="form-control" type="number" step="0.01" min="0" id="PrecioUnitario" readonly />
        <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Agregar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        let precioUnitarioBase = 0;

        function calcularPrecioTotal() {
            const cantidad = parseFloat($('#Cantidad').val()) || 0;
            const total = cantidad * precioUnitarioBase;
            $('#PrecioUnitario').val(total.toFixed(2));
        }

        $(document).ready(function () {
            $('#IdProducto').change(function () {
                var idProducto = $(this).val();

                if (idProducto) {
                    $.ajax({
                        url: '/Productos/ObtenerPrecio',
                        type: 'GET',
                        data: { idProducto: idProducto },
                        success: function (precio) {
                            precioUnitarioBase = parseFloat(precio) || 0;
                            calcularPrecioTotal();
                        },
                        error: function () {
                            alert('Error al obtener el precio del producto.');
                            precioUnitarioBase = 0;
                            $('#PrecioUnitario').val(0);
                        }
                    });
                } else {
                    precioUnitarioBase = 0;
                    $('#PrecioUnitario').val(0);
                }
            });

            $('#Cantidad').on('input', function () {
                calcularPrecioTotal();
            });
        });
    </script>
}
