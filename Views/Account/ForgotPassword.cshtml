@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow p-4" style="width:400px;">
        <h3 class="text-center mb-4" style="color: var(--primary-color); font-weight:bold;">
            Recuperar contraseña
        </h3>

        <form method="post" asp-action="ForgotPassword" asp-controller="Account">
            <div class="mb-3">
                <label class="form-label">Correo electrónico</label>
                <input type="email" name="email" class="form-control" placeholder="ejemplo@correo.com" required />
            </div>
            <button type="submit" class="btn btn-outline-dark w-100">
                <i class="fa-solid fa-envelope"></i> Enviar enlace
            </button>
        </form>

        <!-- Mensajes -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger mt-3 text-center">@TempData["Error"]</div>
        }

        @if (TempData["Ok"] != null)
        {
            <div class="alert alert-success mt-3 text-center">@TempData["Ok"]</div>
        }
    </div>
</div>
