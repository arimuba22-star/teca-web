@{
    ViewData["Title"] = "Cambiar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height:80vh;">
    <div class="card shadow p-4" style="width:400px;">
        <h3 class="text-center mb-4" style="color: var(--primary-color); font-weight:bold;">
            Cambiar Contraseña
        </h3>

        <form method="post" asp-action="ChangePassword" asp-controller="Account">
            <input type="hidden" name="email" value="@ViewBag.Email" />
            <input type="hidden" name="token" value="@ViewBag.Token" />

            <div class="mb-3">
                <label class="form-label">Nueva contraseña</label>
                <div class="input-group">
                    <input type="password" name="newPassword" id="newPassword" class="form-control" required />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('newPassword')">
                        👁
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirmar nueva contraseña</label>
                <div class="input-group">
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirmPassword')">
                        👁
                    </button>
                </div>
            </div>

            <button type="submit" class="btn btn-outline-dark w-100">
                <i class="fa-solid fa-key"></i> Cambiar Contraseña
            </button>
        </form>

        <!-- Mensajes abajo -->
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center mt-3">@TempData["Error"]</div>
        }
        else if (TempData["Ok"] != null)
        {
            <div class="alert alert-success text-center mt-3">
                @TempData["Ok"] <br />
                <a asp-action="Login" asp-controller="Account" class="btn btn-sm btn-primary mt-2">
                    Ir al Login
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(id) {
            var input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }
    </script>
}
