@model IEnumerable<SWebEnergia.Models.Producto>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Repuestos";
    var q = ViewData["CurrentFilter"] as string;
    var nombreSort = ViewData["NombreSort"] as string;
    var precioSort = ViewData["PrecioSort"] as string;
    var mantenimientoSort = ViewData["MantenimientoSort"] as string;
    var vidaUtilSort = ViewData["VidaUtilSort"] as string;
}

<div class="card p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="fa-solid fa-boxes"></i> Repuestos</h4>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i> Nuevo</a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input name="q" value="@q" class="form-control" placeholder="Buscar por nombre, código SKU o categoría" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-dark w-100" asp-action="Index"><i class="fa-solid fa-rotate"></i> Limpiar</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@nombreSort">Nombre</a>
                    </th>
                    <th>Código SKU</th>
                    <th>Categoría</th>
                    <th>Precio Compra</th>
                    <th>Precio Venta</th>
                    <th>Stock</th>
                    <th>Stock Mínimo</th>
                    <th>Frecuencia Mantenimiento (Años)</th>
                    <th>Tiempo Vida Útil (Años)</th>
                    <th>Activo</th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.CodigoSku</td>
                        <td>@item.IdCategoriaNavigation?.Nombre</td>
                        <td>@item.PrecioCompra?.ToString("C")</td>
                        <td>@item.PrecioVenta.ToString("C")</td>
                        <td>
                            @if (item.Stock <= (item.StockMinimo ?? 0))
                            {
                                <span class="badge bg-danger">@item.Stock</span>
                            }
                            else
                            {
                                <span>@item.Stock</span>
                            }
                        </td>
                        <td>@item.StockMinimo</td>
                        <td>@item.FrecuenciaMantenimientoRecomendado</td>
                        <td>@item.TiempoVidaUtil</td>
                        <td>
                            @if (item.Activo == true)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdProducto"><i class="fa-solid fa-eye"></i></a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdProducto"><i class="fa-solid fa-pen"></i></a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdProducto"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
