@model SWebEnergia.Models.Usuario
@{
    ViewData["Title"] = "Detalle de Usuario";
}

<div class="card p-3">
    <h5 class="mb-3"><i class="fa-solid fa-user"></i> Detalle</h5>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.IdRolNavigation?.Nombre</dd>

        <dt class="col-sm-2">Fecha de nacimiento</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento?.ToString("yyyy-MM-dd")</dd>


        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@((Model.Activo == true) ? "Sí" : "No")</dd>

        <dt class="col-sm-2">Fecha de creación</dt>
        <dd class="col-sm-10">@Model.FechaCreacion?.ToString("yyyy-MM-dd HH:mm:ss")</dd>
    </dl>
    <div class="mt-3 d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdUsuario">
            <i class="fa-solid fa-pen"></i> Editar
        </a>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</div>

