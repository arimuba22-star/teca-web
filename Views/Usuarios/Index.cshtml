@model IEnumerable<SWebEnergia.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    var q = ViewData["CurrentFilter"] as string;
    var nombreSort = ViewData["NombreSort"] as string;
    var emailSort = ViewData["EmailSort"] as string;
}

<div class="card p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="fa-solid fa-users"></i> Usuarios</h4>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i> Nuevo Usuario</a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input name="q" value="@q" class="form-control" placeholder="Buscar por nombre, email, etc." />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-dark w-100" asp-action="Index"><i class="fa-solid fa-rotate"></i> Limpiar</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@nombreSort">Nombre</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@emailSort">Email</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@ViewData["FechaNacimientoSort"] as string">Fecha Nac.</a>
                    </th>

                    <th>Estado</th>
                    <th>Rol</th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.FechaNacimiento?.ToString("dd/MM/yyyy")</td>

                        <td>
                            @if (usuario.Activo.HasValue && usuario.Activo.Value)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            @switch (usuario.IdRolNavigation?.Nombre)
                            {
                                case "Administrador":
                                    <span class="badge bg-primary">Administrador</span>
                                    break;
                                case "Operador":
                                    <span class="badge bg-info text-dark">Operador</span>
                                    break;
                                case "Tecnico":   // <-- sin tilde
                                case "Técnico":   // <-- con tilde
                                                  <span class="badge bg-warning text-dark">Técnico</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Sin Rol</span>
                                    break;
                            }
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@usuario.IdUsuario"><i class="fa-solid fa-eye"></i></a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@usuario.IdUsuario"><i class="fa-solid fa-pen"></i></a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@usuario.IdUsuario"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
