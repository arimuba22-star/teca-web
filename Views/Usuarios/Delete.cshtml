@model SWebEnergia.Models.Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
}
<div class="card p-3">
    <h5 class="mb-3 text-danger"><i class="fa-solid fa-triangle-exclamation"></i> Confirmar eliminación</h5>
    <p>¿Seguro que deseas eliminar este usuario?</p>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.IdRolNavigation?.Nombre</dd>
        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@((Model.Activo == true) ? "Sí" : "No")</dd>
        <dt class="col-sm-2">Fecha de creación</dt>
        <dd class="col-sm-10">@Model.FechaCreacion?.ToString("yyyy-MM-dd HH:mm:ss")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <button class="btn btn-danger"><i class="fa-solid fa-trash"></i> Eliminar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>
