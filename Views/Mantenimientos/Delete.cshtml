@model SWebEnergia.Models.Mantenimiento

@{
    ViewData["Title"] = "Eliminar Mantenimiento";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger" role="alert">
    ¿Está seguro que desea eliminar este mantenimiento? Esta acción no se puede deshacer.
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">Cliente: @Model.Cliente.Nombre</h5>
        <p class="card-text"><strong>Sistema Renovable:</strong> @Model.SistemaRenovable.Descripcion</p>
        <p class="card-text"><strong>Tipo de Mantenimiento:</strong> @Model.TipoMantenimiento</p>
        <p class="card-text"><strong>Fecha Solicitud:</strong> @Model.FechaSolicitud?.ToString("dd/MM/yyyy")</p>
        <p class="card-text"><strong>Fecha Programada:</strong> @Model.FechaProgramada?.ToString("dd/MM/yyyy")</p>
        @if (Model.FechaFin.HasValue)
        {
            <p class="card-text"><strong>Fecha Finalización:</strong> @Model.FechaFin.Value.ToString("dd/MM/yyyy")</p>
        }
        <p class="card-text"><strong>Estado:</strong> @Model.Estado</p>
        <p class="card-text"><strong>Requiere Productos:</strong> @(Model.RequiereProductos ? "Sí" : "No")</p>
        <p class="card-text"><strong>Diagnóstico:</strong> @Model.Diagnostico</p>
        <p class="card-text"><strong>Observaciones:</strong> @Model.Observaciones</p>
        <p class="card-text"><strong>Costo Mantenimiento:</strong> @Model.CostoMantenimiento?.ToString("C")</p>
        <p class="card-text"><strong>Costo Total:</strong> @Model.CostoTotal?.ToString("C")</p>
    </div>
</div>

@if (Model.RequiereProductos && Model.Detalles.Any())
{
    <h4>Productos Asociados</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.Detalles)
            {
                <tr>
                    <td>@detalle.Producto.Nombre</td>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.PrecioUnitario.ToString("C")</td>
                    <td>@detalle.SubTotal.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdMantenimiento" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
