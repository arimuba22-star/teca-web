@model SWebEnergia.Models.Cliente
@{
    ViewData["Title"] = "Detalle de Cliente";

}
<div class="card p-3">
    <h5 class="mb-3"><i class="fa-solid fa-id-card"></i> Detalle</h5>
    <dl class="row">
        <dt class="col-sm-2">Nombre/Razón Social</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <!-- Mostrar los nuevos campos -->
        <dt class="col-sm-2">Tipo de Documento</dt>
        <dd class="col-sm-10">@Model.TDocumento</dd>
        <dt class="col-sm-2">Número de Documento</dt>
        <dd class="col-sm-10">@Model.NDocumento</dd>

        <dt class="col-sm-2">Fecha de nacimiento/Fecha de Creación</dt>
        <dd class="col-sm-10">@Model.FechaNacimiento?.ToString("yyyy-MM-dd")</dd>

    </dl>
    <div class="mt-3 d-flex gap-2">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.IdCliente"><i class="fa-solid fa-pen"></i> Editar</a>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</div>
