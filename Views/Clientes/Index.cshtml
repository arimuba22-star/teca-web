@model IEnumerable<SWebEnergia.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
    var q = ViewData["CurrentFilter"] as string;
    var nombreSort = ViewData["NombreSort"] as string;
    var emailSort = ViewData["EmailSort"] as string;
}

<div class="card p-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0"><i class="fa-solid fa-users"></i> Clientes</h4>
        <a class="btn btn-primary" asp-action="Create"><i class="fa-solid fa-plus"></i> Nuevo</a>
    </div>

    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-4">
            <input name="q" value="@q" class="form-control" placeholder="Buscar por nombre, email, teléfono, dirección, documento" />
        </div>
        <div class="col-md-2">
            <button class="btn btn-outline-secondary w-100"><i class="fa-solid fa-magnifying-glass"></i> Buscar</button>
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-dark w-100" asp-action="Index"><i class="fa-solid fa-rotate"></i> Limpiar</a>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@nombreSort">Nombre/Razón Social</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-q="@q" asp-route-sort="@emailSort">Email</a>
                    </th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Tipo Documento</th>
                    <th>Número Documento</th>
                    <th>Fecha Nacimiento</th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@item.Telefono</td>
                        <td>@item.Direccion</td>
                        <td>@item.TDocumento</td> <!-- Mostrar tipo de documento -->
                        <td>@item.NDocumento</td> <!-- Mostrar número de documento -->
                        <td>@item.FechaNacimiento?.ToString("yyyy-MM-dd")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdCliente"><i class="fa-solid fa-eye"></i></a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdCliente"><i class="fa-solid fa-pen"></i></a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdCliente"><i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
