@model SWebEnergia.Models.Cliente
@{
    ViewData["Title"] = "Eliminar Cliente";

}
<div class="card p-3">
    <h5 class="mb-3 text-danger"><i class="fa-solid fa-triangle-exclamation"></i> Confirmar eliminación</h5>
    <p>¿Seguro que deseas eliminar este cliente?</p>
    <dl class="row">
        <dt class="col-sm-2">Nombre/Razón Social</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>
        <dt class="col-sm-2">Dirección</dt>
        <dd class="col-sm-10">@Model.Direccion</dd>

        <!-- Mostrar los nuevos campos -->
        <dt class="col-sm-2">Tipo de Documento</dt>
        <dd class="col-sm-10">@Model.TDocumento</dd>
        <dt class="col-sm-2">Número de Documento</dt>
        <dd class="col-sm-10">@Model.NDocumento</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCliente" />
        <button class="btn btn-danger"><i class="fa-solid fa-trash"></i> Eliminar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>
</div>
